var isStop = false;
window.stopScroll=()=>{isStop = true}
window.startScroll = ()=>{

isStop = false;
const scrollingContainer = document.querySelector('.scrolling-buttons');
const passageLinks = document.querySelectorAll('.passage-link');
const scrollSpeed = 1.5; // 滚动的速度，可以根据需要调整

if(scrollingContainer){

// 获取文本元素的宽度总和
const totalWidth = Array.from(passageLinks).reduce((acc, link) => acc + link.offsetWidth,0);

// 设置滚动容器的初始位置
let scrollPosition = totalWidth;
console.log('totalWidth',totalWidth)
// 定义滚动函数
function scrollContainer() {
  if(isStop) return;
  scrollPosition -= scrollSpeed;
  
  // 当滚动到达一轮的终点时，重置滚动位置
  if (scrollPosition <= -totalWidth - scrollingContainer.offsetWidth) {
    scrollPosition = totalWidth;
  }
  
  // 更新滚动容器的位置
  scrollingContainer.style.transform = `translateX(${scrollPosition}px)`;

  // 以一定间隔递归调用滚动函数
  requestAnimationFrame(scrollContainer);
}

// 启动滚动
scrollContainer();
}
}



